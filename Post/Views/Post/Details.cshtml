@model PostClass

<h1>Szczegóły</h1>

<table class="table table-bordered" style="background-color: lightblue;">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>

    <tr>
        <th>Zawartość</th>
        <td>@Model.Content</td>
    </tr>

    <tr>
        <th>Autor</th>
        <td>@Model.Author</td>
    </tr>

    <tr>
        <th>Data publikacji</th>
        <td>@Model.Date</td>
    </tr>

    <tr>
        <th>Tagi</th>
        <td>@Model.Tags</td>
    </tr>  

    <tr>
        <th>Komentarz</th>
        <td>@Model.Comment</td>
    </tr>

    <tr>
        <th>Komentarz</th>
        <td>@Model.Comment</td>
    </tr>

    <tr>
        <th>Temat</th>
        <td>@Model.Topic.GetDisplayName()</td>
    </tr>
</table>
<span>
    <a asp-controller="Post" asp-action="Index"><button type="submit" class="btn btn-primary">Powrót</button></a>
</span>
