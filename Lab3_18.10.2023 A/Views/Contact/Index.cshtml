@model Dictionary<int, Contact>
@*  
*@
@{
}

<h1>Lista kontaktów</h1>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Utwórz kontakt</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Emial
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model)
        {
            <tr>
                <td>@item.Value.Name</td>
                <td>@item.Value.Email</td>
                <td><a class="btn btn-primary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Key">Edytuj</a></td>
                <td><a class="btn btn-primary" asp-controller="Contact" asp-action="Detailes" asp-route-id="@item.Key">Szczegóły</a></td>
                <td><a class="btn btn-primary" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Key">Usuń</a></td>
            </tr>
        }
    </tbody>
</table>